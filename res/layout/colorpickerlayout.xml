<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:superdry="http://schemas.android.com/apk/res/org.superdry.util.colorpicker"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pColor"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="#ff333333"
            android:text="prev" />

        <TextView
            android:id="@+id/nColor"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="#ff330033"
            android:text="next" />

        <TextView
            android:id="@+id/colorCode"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/colorRGB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="RGB:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/colorHSV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="HSV:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/colorYUV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="YUV:"
        android:textSize="12sp" />

    <org.superdry.util.colorpicker.lib.SuperdryColorPickerView
        android:id="@+id/colorView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:layout_weight="1" />
    <!-- superdry:radius="120px" superdry:sliderWidth="50px" -->

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK" />

        <Button
            android:id="@+id/ng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>